<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuzzleDazzle.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- App Title/Logo Area -->
        <VerticalStackLayout Grid.Row="0" 
                           VerticalOptions="Center"
                           Spacing="10"
                           Margin="0,40,0,0">
            <Label Text="Puzzle Dazzle"
                   FontSize="42"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource Primary}" />
            <Label Text="Create Amazing Mazes"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource Gray600}" />
        </VerticalStackLayout>

        <!-- Main Buttons Area -->
        <VerticalStackLayout Grid.Row="1" 
                           VerticalOptions="Center"
                           Spacing="20"
                           Margin="0,40,0,40">
            <Button Text="Start"
                    FontSize="24"
                    HeightRequest="70"
                    CornerRadius="35"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    Clicked="OnStartClicked"
                    SemanticProperties.Hint="Start generating a maze" />
            
            <Button Text="Settings"
                    FontSize="20"
                    HeightRequest="60"
                    CornerRadius="30"
                    BackgroundColor="{DynamicResource Secondary}"
                    TextColor="White"
                    Clicked="OnSettingsClicked"
                    SemanticProperties.Hint="Open settings to configure maze parameters" />
        </VerticalStackLayout>

        <!-- Footer Area (optional for future version info) -->
        <Label Grid.Row="2"
               Text="v1.0"
               FontSize="12"
               HorizontalTextAlignment="Center"
               TextColor="{DynamicResource Gray400}"
               Margin="0,0,0,10" />
    </Grid>

</ContentPage>
