<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuzzleDazzle.SettingsPage"
             Title="Settings"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            
            <!-- Maze Size Section -->
            <StackLayout Spacing="10">
                <Label Text="Maze Size"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}" />
                
                <Picker x:Name="SizePicker"
                        Title="Select maze size"
                        FontSize="16"
                        SelectedIndexChanged="OnSizeChanged">
                    <Picker.Items>
                        <x:String>Small (10x10)</x:String>
                        <x:String>Medium (20x20)</x:String>
                        <x:String>Large (30x30)</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>

            <!-- Difficulty Section -->
            <StackLayout Spacing="10">
                <Label Text="Difficulty"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}" />
                
                <Picker x:Name="DifficultyPicker"
                        Title="Select difficulty"
                        FontSize="16"
                        SelectedIndexChanged="OnDifficultyChanged">
                    <Picker.Items>
                        <x:String>Easy</x:String>
                        <x:String>Medium</x:String>
                        <x:String>Hard</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>

            <!-- Visual Style Section -->
            <StackLayout Spacing="10">
                <Label Text="Visual Style"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}" />
                
                <Label Text="Classic black &amp; white style"
                       FontSize="14"
                       TextColor="{DynamicResource Gray600}" />

                <!-- Classic Style Display (read-only) -->
                <Border Stroke="{DynamicResource Primary}"
                        StrokeThickness="2"
                        BackgroundColor="White"
                        Padding="10"
                        HorizontalOptions="Center"
                        WidthRequest="200"
                        Margin="0,10,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <StackLayout Spacing="5">
                        <BoxView HeightRequest="100"
                                 BackgroundColor="White"
                                 CornerRadius="5" />
                        <Label Text="Classic"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="{DynamicResource Gray900}" />
                        <Label Text="Black &amp; White"
                               FontSize="12"
                               HorizontalTextAlignment="Center"
                               TextColor="{DynamicResource Gray600}" />
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- Back Button -->
            <Button Text="Back"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="{DynamicResource Secondary}"
                    TextColor="White"
                    Clicked="OnBackClicked"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
