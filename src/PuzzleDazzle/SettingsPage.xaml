<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuzzleDazzle.SettingsPage"
             Title="Settings"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            
            <!-- Maze Size Section -->
            <StackLayout Spacing="10">
                <Label Text="Maze Size"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}" />
                
                <Picker x:Name="SizePicker"
                        Title="Select maze size"
                        FontSize="16"
                        SelectedIndexChanged="OnSizeChanged">
                    <Picker.Items>
                        <x:String>Small (10x10)</x:String>
                        <x:String>Medium (20x20)</x:String>
                        <x:String>Large (30x30)</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>

            <!-- Difficulty Section -->
            <StackLayout Spacing="10">
                <Label Text="Difficulty"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}" />
                
                <Picker x:Name="DifficultyPicker"
                        Title="Select difficulty"
                        FontSize="16"
                        SelectedIndexChanged="OnDifficultyChanged">
                    <Picker.Items>
                        <x:String>Easy</x:String>
                        <x:String>Medium</x:String>
                        <x:String>Hard</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>

            <!-- Visual Style Section -->
            <StackLayout Spacing="10">
                <Label Text="Visual Style"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Primary}" />
                
                <Label Text="Choose how your maze will look"
                       FontSize="14"
                       TextColor="{DynamicResource Gray600}" />

                <!-- Style Selection Grid -->
                <Grid ColumnDefinitions="*,*" 
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="15"
                      RowSpacing="10"
                      Margin="0,10,0,0">
                    
                    <!-- Classic Style -->
                    <Frame Grid.Column="0"
                           x:Name="ClassicFrame"
                           BorderColor="{DynamicResource Primary}"
                           CornerRadius="10"
                           Padding="10"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassicStyleTapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout Spacing="5">
                            <BoxView HeightRequest="100"
                                     BackgroundColor="White"
                                     CornerRadius="5" />
                            <Label Text="Classic"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{DynamicResource Gray900}" />
                            <Label Text="Black &amp; White"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{DynamicResource Gray600}" />
                        </StackLayout>
                    </Frame>

                    <!-- Soft Style -->
                    <Frame Grid.Column="1"
                           x:Name="SoftFrame"
                           BorderColor="{DynamicResource Gray300}"
                           CornerRadius="10"
                           Padding="10"
                           HasShadow="True">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSoftStyleTapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout Spacing="5">
                            <BoxView HeightRequest="100"
                                     BackgroundColor="#F0F0F0"
                                     CornerRadius="5" />
                            <Label Text="Soft"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{DynamicResource Gray900}" />
                            <Label Text="Pastel Colors"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{DynamicResource Gray600}" />
                        </StackLayout>
                    </Frame>
                </Grid>
            </StackLayout>

            <!-- Back Button -->
            <Button Text="Back to Main"
                    FontSize="18"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="{DynamicResource Secondary}"
                    TextColor="White"
                    Clicked="OnBackClicked"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
